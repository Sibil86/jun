@model List<kala>



<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>نمایش کالاها</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .product {
            display: inline-block;
            width: 250px;
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .product img {
                max-width: 100%;
                height: auto;
            }

            .product h2 {
                font-size: 18px;
                margin-top: 10px;
            }

            .product p {
                font-size: 14px;
                color: #777;
            }
    </style>
</head>
<body>
      @foreach (var item in Model)
      {
        <div class="container">
        <div class="product">
          
               <h4> نام =  @item.Name</h4>
                <br />
                <h4> قیمت =  @item.Price</h4>
                <br />
                <h4> توضیحات =  @item.Description</h4>
                <br />
                <img src="@Url.Content( @item.ImagePath)" />
				
		~/ d"
        </div>
        </div>
      }
   
</body>
</html>
