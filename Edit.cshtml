@model moshtari

<div class="container">
    <form asp-action="Edit" asp-controller="Home" method="post" class="edit-form">
        <div class="form-group">
            <input asp-for="Id" type="text" class="form-control" placeholder="ID" />
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="New Password" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password" />
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>
