@model List<kala>

<style>
    /* اینجا CSS را اضافه کنید */
    form {
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

    input[type="text"] {
        width: 200px;
        padding: 5px;
        margin-right: 10px;
    }

    button[type="submit"] {
        padding: 8px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #45a049;
        }

    .product {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
    }

        .product h3 {
            margin-top: 0;
        }

        .product p {
            margin-bottom: 5px;
        }
</style>

<form asp-action="search" asp-controller="Home" method="post">
    <input type="text" name="a" placeholder="قیمت" />
    <input type="text" name="b" placeholder="قیمت" />
    @foreach (var item in Model)
    {
        <div class="product">
            <h3>@item.Name</h3>
            <p>قیمت: @item.Price</p>
            <p>توضیحات: @item.Description</p>
        </div>
    }
    <button type="submit">جستجو</button>
</form>
